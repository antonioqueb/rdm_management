<odoo>
    <record id="view_rdm_solicitud_form" model="ir.ui.view">
        <field name="name">rdm.solicitud.form</field>
        <field name="model">rdm.solicitud</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Encabezado con nombre de la solicitud y barra de estado -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Solicitud"/>
                        </h1>
                        <field name="estado" widget="statusbar"/>
                    </div>
                    <group>
                        <group string="InformaciÃ³n de Solicitud">
                            <field name="fecha_solicitud"/>
                            <field name="fecha_requerida"/>
                            <field name="fecha_critica"/>
                            <field name="prioridad"/>
                        </group>
                        <group string="Datos de AlmacÃ©n y Surtido">
                            <field name="almacen_id"/>
                            <field name="metodo_surtido"/>
                        </group>
                        <group string="Autorizaciones">
                            <field name="solicitante_id"/>
                            <field name="autorizado"/>
                            <field name="autorizado_por_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Detalles de la Solicitud">
                            <group>
                                <field name="comentario_autorizador"/>
                            </group>
                            <group>
                                <field name="justificacion"/>
                            </group>
                            <group>
                                <field name="archivo_adjunto" filename="name"/>
                            </group>
                        </page>

                        <page string="Productos Solicitados">
                            <field name="linea_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="cantidad_solicitada"/>
                                    <field name="uom_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
